<% if user_signed_in? %>
  <%= t('admin.header.welcome') %>,
  <b><%= current_user.full_name.html_safe %></b> <%= t('admin.header.guru') %> |
  <% if current_user.admin? %>
    <%= link_to t('admin.header.manage_badges'), admin_badges_path, class: 'navbar-brand' %> |
    <%= link_to t('admin.header.admin_panel'), admin_tests_path %> |
  <% end %>
  <%= link_to t('admin.header.log_out'), destroy_user_session_path, method: :delete %>
<% else %>
  <%= link_to t('admin.header.log_in'), new_user_session_path %> <%= t('admin.header.or') %>
  <%= link_to t('admin.header.sign_up'), new_user_registration_path %>
<% end %>
