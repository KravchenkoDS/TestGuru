<% if resource.present? && resource.errors.present? %>
  <%= content_tag :div, class: 'resource-errors alert alert-danger',
    data: { resource_id: resource.methods.include?(:id) } do %>

    <h2><%= t('.header', count: resource.errors.count) %></h2>

    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>